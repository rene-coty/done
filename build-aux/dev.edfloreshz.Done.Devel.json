{
    "id": "dev.edfloreshz.Done.Devel",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "done",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "build-args": [
            "--share=network"
        ],
        "env": {
            "CARGO_HOME": "/run/build/done/cargo"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "done",
            "builddir": true,
            "buildsystem": "meson",
            "config-opts": [
                "-Dprofile=development"
            ],
            "sources": [
                {
                    "type": "git",
                    "branch": "main",
                    "url": "https://github.com/done-devs/done.git"
                }
            ]
        }
    ]
}